@model Blog.Models.Articles
@{
    ViewBag.Title = "内容页";
}
<aside>
    <div class="l_box">
        @Html.Partial("~/Views/Shared/_PartialSearch.cshtml")
        @Html.Action("ArticlesType", new { controller = "PartialView" })
        @Html.Action("TagsCloud", new { controller = "PartialView" })
        @Html.Partial("~/Views/Shared/_PartialAttentionMe.cshtml")
    </div>
</aside>
<div class="infosbox">
    <main>
    <div class="newsview">
      <h3 class="news_title">@Model.Title<!--个人博客，属于我的小世界！--></h3>
      <div class="bloginfo">
        <ul>
          <li class="author">作者：<a href="/">@Model.Source</a><!--作者：<a href="/">杨青</a>--></li>
          <li class="lmname"><a href="/">@Model.Type</a><!--<a href="/">学无止境</a>--></li>
          <li class="timer">时间：@Model.CreateTime<!--时间：2018-5-13--></li>
          <li class="view">@Model.ReadTimes 人已阅读</li>
        </ul>
      </div>
      <div class="tags">
          <a href="/" target="_blank">@Model.Tags</a>
      </div>
      <div class="news_about">
         <strong>简介</strong>@Model.SimpleInfo
      </div>
      <div class="news_con">
          @Model.Cont
      </div>
    </div>
    <div class="share">
      <p class="diggit"><a href="JavaScript:makeRequest('/e/public/digg/?classid=3&amp;id=19&amp;dotop=1&amp;doajax=1&amp;ajaxarea=diggnum','EchoReturnedText','GET','');"> 很赞哦！ </a>(<b id="diggnum"><script type="text/javascript" src="/e/public/ViewClick/?classid=2&id=20&down=5"></script>13</b>)</p>
    </div>
    <div class="nextinfo">
        @{
            if (ViewBag.PerviousArticles != null)
            {
                <p>上一篇：<a href='/Home/ArticleDetail?id=@ViewBag.PerviousArticles.Id'>@ViewBag.PerviousArticles.Title</a></p>
            }
            if (ViewBag.NextArticles != null)
            {
                <p>下一篇：<a href='/Home/ArticleDetail?id=@ViewBag.NextArticles.Id'>@ViewBag.NextArticles.Title</a></p>
            }  
         }
    </div>
    <div class="news_pl">
      <h2>文章评论</h2>
      <ul>
        <div class="gbko"> </div>
      </ul>
    </div>
</main>
</div>
