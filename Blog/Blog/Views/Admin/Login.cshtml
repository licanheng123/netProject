@{
    ViewBag.Title = "Login";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>博客后台管理系统</title>
    <link href="~/OpenSource/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="logintop">
        <span>博客后台管理系统</span>
        <a href="/Home/Index">前台博客</a>
    </div>
    <!--内容主体-->
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "layui-form" }))
    {
       @Html.AntiForgeryToken()
        <div class="logincontent">
            <div class="layui-container content">
                <div class="layui-row content-title">
                    <div class="layui-col-md12">
                        <span class="title">博客后台管理系统</span>
                    </div>
                </div>
                <div class="layui-row content-input">
                    <label>用户名</label>
                    <div>
                        <input type="text" name="userName" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input" value="admin" />
                    </div>
                    <label>密码</label>
                    <div>
                        <input type="password" name="password" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input" value="admin" />
                    </div>
                </div>
            </div>
            <div class="layui-form-item content-btn">
                    <button class="layui-btn" lay-submit="" lay-filter="demo1">登录</button>
                    <input type="checkbox" name="member" lay-skin="primary" />
                    <span style="color: #fff;">记住密码</span>
            </div>
        </div>
    }
</body>
<script src="~/OpenSource/layui/layui.js"></script>
<script>
    layui.use(['form', 'layer'], function () {
        var form = layui.form;
        var $ = layui.jquery, layer = layui.layer;
        if ('@ViewBag.LoginState' != '') {
            layer.open({
                type: 1
                , offset: 'auto'
                , id: 'layerDemoauto' //防止重复弹出
                , content: '<div style="padding: 20px 80px;">' + '@ViewBag.LoginState' + '</div>'
                , btn: '关闭'
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , yes: function () {
                    layer.closeAll();
                }
            });
        }
    });
</script>
</html>
