@{
    ViewBag.Title = "Password";
}

<!-- 内容主体区域 -->
<div style="padding:5px 15px;">
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
        <legend>修改密码</legend>
    </fieldset>

    <form class="layui-form" action="/Admin/Password" method="post" lay-filter="example">
        @Html.AntiForgeryToken()
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">旧密码</label>
            <div class="layui-input-inline">
                <input type="text" name="oldPassword" lay-verify="required" autocomplete="off" placeholder="请输入旧密码" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">新密码</label>
            <div class="layui-input-inline">
                <input type="text" name="newPassword" lay-verify="required" autocomplete="off" placeholder="请输入新密码" class="layui-input">
            </div>
            <!--<div class="layui-form-mid layui-word-aux">请填写6到12位密码</div>-->
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">确认新密码</label>
            <div class="layui-input-inline">
                <input type="text" name="newPassword1" lay-verify="newpass1" autocomplete="off" placeholder="确认新密码" class="layui-input">
            </div>
            <!--<div class="layui-form-mid layui-word-aux">请填写6到12位密码</div>-->
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" lay-submit="" lay-filter="demo1">立即提交</button>
            </div>
        </div>
    </form>
</div>
<script>
    layui.use(['element', 'form'], function () {
        var element = layui.element;
        var form = layui.form;
        var $ = layui.jquery;
        //自定义验证规则
        form.verify({
            newpass1: function (value, item) {
                if (value != $("input[name='newPassword']").val()) {
                    return '两次输入新密码不一致';
                }
            }
        });
        var warnMsg = '@ViewBag.WarnMsg';
        if (warnMsg != '') {
            layer.msg(warnMsg);
        }
    });
</script>